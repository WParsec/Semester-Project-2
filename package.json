{
  "name": "semester-project-2",
  "version": "0.0.4",
  "description": "An auction website created for Semester Project 2 Noroff",
  "main": "index.js",
  "scripts": {
    "start": "live-server --open=./dist/index.html",
    "watch": "npx tailwindcss -i src/css/styles.css -o dist/styles.css --watch",
    "build": "npx tailwindcss -i ./src/css/styles.css -o ./dist/styles.css --watch & live-server --open=./dist/index.html",
    "format": "prettier -w src/**/*.{css,js}",
    "lint": "eslint src/**/*.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WParsec/Semester-Project-2.git"
  },
  "author": "Tom Erik William Ertvaag",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/WParsec/Semester-Project-2/issues"
  },
  "homepage": "https://github.com/WParsec/Semester-Project-2#readme",
  "devDependencies": {
    "eslint": "^8.28.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.js": "eslint --fix",
    "src/**/*.{css,js,json}": "prettier --write"
  },
  "dependencies": {
    "live-server": "^1.2.2"
  }
}
